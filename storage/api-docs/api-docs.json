{
  "openapi": "3.0.0",
  "info": {
    "title": "Laravel API",
    "version": "1.0.0",
    "description": "API documentation for Laravel application"
  },
  "servers": [
    {
      "url": "http://localhost:8000",
      "description": "API Server"
    }
  ],
  "paths": {
    "/api/hello": {
      "get": {
        "summary": "Get hello message",
        "description": "Returns a friendly greeting message",
        "tags": ["Hello"],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Hello World"
                    },
                    "status": {
                      "type": "string",
                      "example": "success"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Enter JWT token obtained from /api/auth/login"
      }
    }
  }
}
